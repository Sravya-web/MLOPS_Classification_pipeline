[flake8]
max-line-length = 100
extend-ignore = E203, W503, E501
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    docker,
    node_modules

per-file-ignores =
    __init__.py:F401
    tests/*:D100,D101,D102,D103

max-complexity = 10
